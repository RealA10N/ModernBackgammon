<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ModernBackgammon" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_700</item>
        <item name="colorPrimaryVariant">@color/red_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_200</item>
        <item name="colorSecondaryVariant">@color/red_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyButtons" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">8dp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="regularButtonStyle" parent="MyButtons">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/regular_button_selector</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="menuButtonStyle" parent="MyButtons">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/menu_button</item>
    </style>
</resources>